<html>
  <head>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <section>
    <h1> MakersBNB </h1>
    <h2 class="italic">Hi <%= @name.first_name %>!</h2>  
    <h3>Your spaces</h3>
    <% @spaces.each do |space| %>
      <%= space.name %>
    <% end %>
    <h3>Your bookings</h3>

   <div><% @confirmed_spaces.each_with_index do |space, index| %>
      <%=index + 1%>. - <a href="/spaces/<%=space.id%>"> <%= space.name %></a>
      <br><br>
      <% end %></div>

   <div><% @confirmed_bookings.each_with_index do |booking, index| %>
      <%=index + 1%>. - <%= booking.book_from %> to <%= booking.book_to %>
      <br><br>
      <% end %></div>
    
    <a href= "/spaces">Return to homepage</a>
    <br>
    <a href= "/logout">Log out</a> 
  </section>
  </body>
</html>